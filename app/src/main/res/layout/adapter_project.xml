<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    class="android.support.v7.widget.CardView"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content"
    android:id="@+id/item_card_holder"
    app:cardElevation="4dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:theme="@style/CardView.Light">

    <LinearLayout
        android:paddingTop="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_img"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_name"
            android:maxLines="1"
            android:singleLine="true"
            android:text="标题"
            android:textSize="@dimen/abc_text_size_subhead_material"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_creater"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:text="谢晓阳、方扬、陈云峰"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_info"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:maxLength="60"
            android:maxLines="3"
            android:text="微社交，手机你画我猜游戏"
            />

    </LinearLayout>

    </LinearLayout>


</view>